pipeline {
    agent any
    tools {
        maven 'Maven'
        jdk 'Java'
    }
    stages {
     
        stage ('Build') {
            steps {
                bat 'mvn clean install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
            stage ('Deploy') { 
                steps {
                    deploy adapters: [tomcat8(credentialsId: 'deployer', path: '', url: 'http://localhost:8089/')], contextPath: 'Tomcat-implementation', war: '**/*.jar'
                }
            }    
        }
    }
}
